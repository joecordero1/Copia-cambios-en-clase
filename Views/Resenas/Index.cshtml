@*@model IEnumerable<Final_Cordero_Raura.Models.Resena>*@
@model IEnumerable<Final_Cordero_Raura.ViewModels.ResenaViewModel>

@{
    ViewData["Title"] = "Reseñas";
}

<h1>Últimas reseñas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Publica tu reseña</a>
</p>
<form asp-controller="Resenas" asp-action="Index">
    <p>
        Buscar: <input type="text" name="Buscar" class="form-text"/>
        <input type="submit" value="Buscar" class="btn btn-sm btn-dark"/>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-filtro="@ViewData["FiltroTitulo"]">
                    @Html.DisplayNameFor(model => model.Titulo)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Texto)
            </th>
            <th>
                Película
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.Raw(item.Texto)
            </td>
            <td>
                @*Modifiqué los istems debido a compatibilidad con el ResenaViewModel*@
                <img src="@item.PosterPelicula" alt="Poster de la película" width="100" height="150" />
                @Html.DisplayFor(modelItem => item.NombrePelicula)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdResena">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdResena">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdResena">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
